<Window x:Class="Proiect_PI.ReminderAlertWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Proiect_PI"
        mc:Ignorable="d"
        Title="ReminderAlertWindow" Height="300" Width="300"
        DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <Grid Margin="0,0,0,-1">
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="36,30,0,0" TextWrapping="Wrap" Text="{Binding Path = ReminderText}" VerticalAlignment="Top" Width="216" Height="141" TextAlignment="Center" FontSize="18"/>
        <Button x:Name="editButton" Content="Edit" HorizontalAlignment="Left" Margin="207,197,0,0" VerticalAlignment="Top" Width="65" Click="editButton_Click"/>
        <Button x:Name="snoozeButton" Content="Snooze" HorizontalAlignment="Left" Margin="19,197,0,0" VerticalAlignment="Top" Width="68" Click="snoozeButton_Click"/>
        <Button x:Name="doneButton" Content="Done" HorizontalAlignment="Left" Margin="110,189,0,0" VerticalAlignment="Top" Width="75" Height="38" Click="doneButton_Click"/>
    </Grid>

</Window>

