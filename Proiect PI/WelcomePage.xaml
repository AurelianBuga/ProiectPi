<Page x:Class="Proiect_PI.WelcomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Proiect_PI"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="WelcomePage"
      Width="572" 
      Height="424"
      ShowsNavigationUI = "False"
      DataContext="{Binding RelativeSource={RelativeSource Self}}">

    <Grid>

        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="293,187,0,0" TextWrapping="Wrap" Text="{Binding Path=Username}" VerticalAlignment="Top" FontSize="40"/>
        <TextBlock x:Name="textBlock1" HorizontalAlignment="Left" Margin="101,187,0,0" TextWrapping="Wrap" Text="Welcome " VerticalAlignment="Top" FontSize="40"/>

    </Grid>
</Page>
